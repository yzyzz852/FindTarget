<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_layer_vtwo"
    tools:context="com.motyvacfdhtor.yzyzz.findpokemonv3.MainActivity">


    <TextView
        android:textSize="18dp"
        android:id="@+id/timeTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Left: 60s"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:layout_marginRight="8dp"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        ads:layout_constraintHorizontal_bias="0.583">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:textSize="18dp"
        android:id="@+id/targLeftTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Targets left:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timeTXT"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/targetTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target:"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/targLeftTXT"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/targetBC"
        android:layout_width="wrap_content"
        android:layout_height="385dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetIcon"
        app:srcCompat="@drawable/icons_new_vtwo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/targetIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/targetTXT"
        app:layout_constraintTop_toBottomOf="@+id/targLeftTXT"
        app:srcCompat="@drawable/test_icon_vtwo" />

    <ImageView
        android:id="@+id/plusTEN"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/for_test_plus"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/mainTarget"
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/test_icon_vtwo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/targetBC"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/targetBC"
        app:layout_constraintTop_toTopOf="@+id/targetBC"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="@+id/targetBC"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
